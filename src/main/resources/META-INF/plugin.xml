<idea-plugin>
	<id>com.enderzombi102.chaossourcesupport</id>
	<name>Chaos Source Support</name>
	<vendor email="enderzombi102.end@gmail.com" url="https://github.com/ENDERZOMBI102/ChaosSourceSupport">
		ENDERZOMBI102
	</vendor>

	<description>
		AngelScript is a free, open source, flexible, and cross-platform scripting library meant to be embedded in
		applications.

		This plugin adds language support for people who are using Intellij to develop with AngelScript. It adds
		features such as syntax highlighting, code-completion for variables, and allows Intellij to identify AngelScript
		files using the .as extension.

		To update the syntax highlighting color preferences, go to Settings -> Editor -> Color Scheme -> AngelScript.
	</description>

	<change-notes>
		Initial release of the plugin. Syntax Highlighting, variable code completion, settings pages for
		syntax highlighter colors.
	</change-notes>

	<!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html on how to target different products -->
	<depends>com.intellij.modules.platform</depends>
	<depends>com.intellij.modules.java</depends>

	<extensions defaultExtensionNs="com.intellij">
		<!-- Add your extensions here -->
		<fileType
				name="AngelScript File"
				implementationClass="org.intellij.sdk.language.angelscript.AngelScriptFileType"
				fieldName="INSTANCE"
				language="AngelScript"
				extensions="as"
		/>

		<completion.contributor
				language="AngelScript"
				implementationClass="org.intellij.sdk.language.angelscript.AngelScriptCompletionContributor"
		/>

		<lang.parserDefinition
				language="AngelScript"
				implementationClass="org.intellij.sdk.language.angelscript.AngelScriptParserDefinition"
		/>
		<lang.syntaxHighlighterFactory
				language="AngelScript"
				implementationClass="org.intellij.sdk.language.angelscript.AngelScriptSyntaxHighlighterFactory"
		/>
		<lang.refactoringSupport
				language="AngelScript"
				implementationClass="org.intellij.sdk.language.angelscript.AngelScriptRefactoringSupportProvider"
		/>
		<!--        <psi.referenceContributor language="AngelScript" implementation="org.intellij.sdk.language.AngelScriptReferenceContributor"/>-->
		<gotoSymbolContributor implementation="org.intellij.sdk.language.angelscript.AngelScriptChooseByNameContributor"/>
		<colorSettingsPage implementation="org.intellij.sdk.language.angelscript.AngelScriptColorSettingsPage"/>
	</extensions>

	<actions>
		<!-- Add your actions here -->
	</actions>
</idea-plugin>